pkgname=glacier-wayland-session
pkgver=0.4
pkgrel=1
pkgdesc="Glacier Wayland session"
arch=('any')
url="https://github.com/nemomobile-ux/glacier-wayland-session.git"
license=('GPL-3.0-or-later')
depends=('lipstick-glacier-home-git' 
	'lightdm'
	'ohm-plugin-ruleengine'
	'ohm-plugins-misc'
	'pulseaudio-modules-nemo'
	'pulseaudio-module-keepalive'
	'pulseaudio-policy-enforcement')

makedepends=('git')
optdepends=()
source=("${pkgname}::git+${url}")
sha512sums=('SKIP')


prepare(){
    cd "${srcdir}/${pkgname}"
    mkdir -p "${pkgdir}"
}

package() {
    cp -r ${srcdir}/${pkgname}/rootdir/* ${pkgdir}/
}
